<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sroffice.SigninTypeActivity" >

    <Button
        android:id="@+id/BIndividual"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BEnterprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#dddddd"
        android:onClick="individuaButtonlClick"
        android:text="个人"
        android:textColor="#000000" />

    <Button
        android:id="@+id/BEnterprise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/BIndividual"
        android:layout_marginTop="65dp"
        android:background="#dddddd"
        android:onClick="enterpriseButtonClick"
        android:text="企业"
        android:textColor="#000000" />

</RelativeLayout>
