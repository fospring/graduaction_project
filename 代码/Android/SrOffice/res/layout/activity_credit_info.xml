<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sroffice.CreditInfoActivity" 
    android:background="#ffffff">

	<LinearLayout
	    android:id="@+id/LLCurrentCredit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">"
	    
	    <TextView
	    android:id="@+id/TVCurrentCredit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="left"
	    android:text="当前积分：" 
	    android:textColor="#000000"
	    android:textSize="20dp"/>
	    
	</LinearLayout>

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/LLCurrentCredit"
	    android:src="@drawable/editview_line" />
	
	<LinearLayout
	    android:id="@+id/LLCreditHistory"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/imageView1"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/llborder"
	    android:orientation="vertical">"
	    
	    <TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="left"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
	    android:text="积分历史：" 
	    android:textColor="#000000"
	    android:textSize="15dp"/>
	    
	    <LinearLayout 
	        android:id="@+id/LLCredit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="5dp">
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:orientation="horizontal">
	            
	            <TextView
			    android:id="@+id/TVTime1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="3"
			    android:gravity="left"
			    android:text="时间" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVDescription1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="5"
			    android:gravity="center_horizontal"
			    android:text="描述" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVchange1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:gravity="center_horizontal"
			    android:text="变化" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:orientation="horizontal">
	            
	            <TextView
			    android:id="@+id/TVTime2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="3"
			    android:gravity="left"
			    android:textColor="#000000"
			    android:text="2018/03/10 16:12:23" 
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVDescription2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="5"
			    android:gravity="center_horizontal"
			    android:text="租赁工位" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVchange2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:gravity="center_horizontal"
			    android:text="+20" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:orientation="horizontal">
	            
	            <TextView
			    android:id="@+id/TVTime3"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="3"
			    android:gravity="left"
			    android:textColor="#000000"
			    android:text="2018/03/15 15:15:23" 
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVDescription3"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="5"
			    android:gravity="center_horizontal"
			    android:text="租赁会议室，损坏物品" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	            
	            <TextView
			    android:id="@+id/TVchange3"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:gravity="center_horizontal"
			    android:text="-30" 
			    android:textColor="#000000"
			    android:textSize="15dp"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	</LinearLayout>

</RelativeLayout>
